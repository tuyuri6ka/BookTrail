<% provide(:title, "書籍一覧") %>
<div class="main posts-index">
    <div class="container">
    <div class="form-heading">本の広場</div>
        <% @posts.each do |post| %>
        <div class="posts-index-item">
            <div class="posts-left">
                <img src="<%= "/user_images/#{post.user.image_name}" %>">
            </div>
            <div class="posts-right">
                <div class="posts-user-name">
                    <%= link_to(post.user.name, "/users/#{post.user.id}") %>
                </div>
                <ul>
                    <li class="posts-left-content">「<%= link_to(post.title, "/posts/#{post.id}") %>」</li>
                    <li class="posts-right-content"> 著：<%= link_to(post.author, "/posts/#{post.id}") %></p\li>
                </ul>
            </div>
        </div>
        <% end %>
    </div>
</div>