<% provide(:title, "新規ユーザー登録") %>
<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">

      <%= form_for @user do |f| %>
        <%= render "shared/error_messages" %>
        <p>ユーザー名</p>
        <%= f.text_field :name %>
        <p>メールアドレス</p>
        <%= f.email_field :email %>
        <p>パスワード</p>
        <%= f.password_field :password %>
        <%= f.submit "新規登録" %>
      <% end %>

      </div>
    </div>
  </div>
</div>