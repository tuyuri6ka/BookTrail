<% provide(:title, "ログイン") %>
<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">

        <!-- 入力ミスがあった場合に、エラーを表示 -->
        <% if @error_message %>
            <div class="form-error">
            <%= @error_message %>
            </div>
        <% end %>

        <%= form_tag("/login") do %>
            <p>メールアドレス</p>
            <input name ="email" value ="<%= @email %>">
            <p>パスワード</p>
            <input type="password" name="password" value="<%= @password %>">
            
            <label for="checkbox">
            <input type="checkbox" name="remember_me" id="checkbox" value="1">ログインしたままにする
            </label>

            <input type="submit" value="ログイんン">
        <% end %>

        </div>
    </div>
  </div>
</div>